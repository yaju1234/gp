<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@xml/block_bg"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/slider_back_icon" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="GP Care"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_text"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/ll_footer"
            android:layout_below="@+id/ll_header" >
        </FrameLayout>
    </RelativeLayout>
    <!-- Slider start -->

    <RelativeLayout
        android:id="@+id/list_slidermenu"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black" >

        <LinearLayout
            android:id="@+id/ll_slider_header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_slider_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/slider_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="GP Care"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_slider_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ll_slider_header"
            android:background="@color/black"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="HOME"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_staffs"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#333333"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#333333"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Staffs"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_doctor_availability"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Doctorâ€™s Availability"
                    android:duplicateParentState="true"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_appointment"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#333333"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#333333"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Appointment"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_information_zone"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="@color/black"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Information Zone"
                    android:duplicateParentState="true"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_us"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#333333"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#333333"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Contact Us"
                    android:textColor="#FFFFFF"
                    android:duplicateParentState="true"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- Slider end -->

</android.support.v4.widget.DrawerLayout>