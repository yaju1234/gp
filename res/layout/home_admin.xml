    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="#1c5fa6"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/slider_back_icon" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="GP Care"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#1c5fa6"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/footer_text"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/ll_footer"
            android:layout_below="@+id/ll_header"
            android:background="@color/purple_light"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_page_title"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="#000000" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_admin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/purple_light" >
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- Slider start -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_slidermenu"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black" >

        <LinearLayout
            android:id="@+id/ll_slider_header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_slider_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/slider_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="GP Care"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_slider_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ll_slider_header"
            android:background="@color/black"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:paddingLeft="10dp"
                    android:text="Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_patient"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#000000"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#000000"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Register Patient"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

    

            <LinearLayout
                android:id="@+id/ll_staff_profile"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="left|center"
                 android:background="#000000"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#333333"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Staff Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_doctor_availability"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="@color/black"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                      android:background="#000000"
                    android:text="Doctor Availability"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_message_board"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#333333"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#333333"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Message Board"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_repeat_prescription"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                      android:background="#000000"
                    android:text="Repeat Prescription"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_query"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="#000000"
                android:gravity="left|center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                     android:background="#333333"
                    android:duplicateParentState="true"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:text="Query"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <!-- Slider end -->

</android.support.v4.widget.DrawerLayout>